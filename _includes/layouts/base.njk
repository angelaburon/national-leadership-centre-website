<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>

		<header role="banner" class="header-main" id="main-navigation">
			<div class="container container--wide container--flex">
				<div class="header-main__logo">
					<a href="{{ '/' | url }}">
						<img src="/static/img/nlc-full-logoX600.png" alt="{{ metadata.title }}" />
					</a>
				</div>
				<div class="header-main__nav">
					{% include "components/nav.njk" %}
				</div>
				<button class="header-main__menu js-closed" aria-expanded="false" href="#main-navigation">
					<a class="css-nav css-nav--open" href="#main-navigation" aria-label="Open menu without javascript">Open</a>
					<a class="css-nav css-nav--close" href="#" aria-label="Close menu without javascript">Close</a>
					<div class="header-main__menu__text closed-text" aria-label="Open menu">Open</div>
					<div class="header-main__menu__text open-text" aria-label="Close menu">Close</div>
					<div class="header-main__menu__burger">
						<div></div>
						<div></div>
						<div></div>
					</div>
				</button>
			</div>
		</header>
		
		{% include "components/title-bar.njk" %}

		<main>
			{{ layoutContent | safe }}
		</main>

		{% include "components/footer.njk" %}

	</body>

</html>
