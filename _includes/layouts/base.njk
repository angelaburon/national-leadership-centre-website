<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>
		<a href="#content" class="skip-link">Skip to main content</a>
		<div id="global-cookie-message">
			<p class="max-width">The National Leadership Centre uses cookies to make this site simpler. <a href="/cookies">Find out more about cookies</a></p>
    </div>
		<header class="site-header">
			<div class="site-header__logo">
				{% if page.url == '/' %}<h1>{% endif %}
				<a href="{{ '/' | url }}">
				<img src="/static/img/nlc-full-logoX600.png" alt="{{ metadata.title }}" />
				</a>
				</h1>
			</div>
			<div class="site-header__nav">
				{% include "components/nav.njk" %}
			</div>
		</header>

		<main id="content">
			{{ layoutContent | safe }}
		</main>

		{% include "components/footer.njk" %}

	</body>

</html>
